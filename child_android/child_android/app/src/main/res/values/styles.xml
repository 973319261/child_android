<resources>

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">

        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:background">@mipmap/splash</item>-->
    </style>

    <style name="VideoPlayTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AnimFade" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="FilterAnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in3</item>
        <item name="android:windowExitAnimation">@anim/push_top_out3</item>
    </style>

    <style name="default_activiy_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="navi_tab_header_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/tab_head_height</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="default_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font15_txt_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="default_edit_text_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font15_txt_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">@dimen/common_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="default_listview">
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <style name="horizontal_line_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="vertical_line_view">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:background">@color/line_color</item>
    </style>
</resources>
