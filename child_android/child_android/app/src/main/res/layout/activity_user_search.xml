<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_activiy_style">

    <include layout="@layout/navi_top_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:padding="@dimen/common_10">

        <com.android.widgets.ClearableEditText
            android:id="@+id/user_search_et"
            style="@style/default_edit_text_style"
            android:layout_weight="1"
            android:background="@drawable/round_corner_shade_no_border_default_style"
            android:hint="好友手机号"
            android:padding="@dimen/common_10" />

        <TextView
            android:id="@+id/user_search_btn"
            style="@style/default_text_view_style"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_10"
            android:background="@drawable/round_corner_purple_red_btn_style"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        style="@style/default_listview"
        android:background="@color/white" />
</LinearLayout>

