<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/common_10">

    <TextView
        android:id="@+id/chat_send_time_tv"
        style="@style/default_text_view_style"
        android:layout_marginBottom="@dimen/common_5"
        android:text="12:12"
        android:textColor="@color/lightGray"
        android:textSize="@dimen/font12_txt_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|top">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_user_name_tv"
                style="@style/default_text_view_style"
                android:text="1324-850600"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/chat_content_tv"
                style="@style/default_text_view_style"
                android:layout_marginTop="@dimen/common_3"
                android:background="@mipmap/chat_send"
                android:gravity="center_vertical|right"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:text="共享单车大战"
                android:textSize="@dimen/font14_txt_size" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chat_user_avatar_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:src="@color/gray" />
    </LinearLayout>
</LinearLayout>