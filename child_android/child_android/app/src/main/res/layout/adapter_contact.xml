<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_list_cell_default_white_press_light_gray_selector"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_header_txt"
        style="@style/default_text_view_style"
        android:layout_width="fill_parent"
        android:background="#F3F3F3"
        android:gravity="center_vertical"
        android:padding="@dimen/common_5"
        android:text="A"
        android:textSize="@dimen/font17_txt_size" />

    <View style="@style/horizontal_line_view" />

    <LinearLayout
        android:id="@+id/contact_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_list_cell_default_white_press_light_gray_selector"
        android:gravity="center_vertical"
        android:padding="@dimen/common_10">

        <ImageView
            android:id="@+id/contact_avatar_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@color/gray" />

        <TextView
            android:id="@+id/contact_name_tv"
            style="@style/default_text_view_style"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_weight="1"
            android:text="1324-850600"
            android:textColor="@color/black"
            android:textSize="@dimen/font16_txt_size" />

    </LinearLayout>


</LinearLayout>