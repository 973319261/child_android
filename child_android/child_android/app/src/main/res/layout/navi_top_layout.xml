<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navi_top_bg_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navi_top_layout_height"
    android:layout_alignParentTop="true"
    android:layout_gravity="top|fill_horizontal"
    android:background="@color/purple_red_color">

    <LinearLayout
        android:id="@+id/navi_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:minWidth="50dp"
        android:onClick="onNaviLeftClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/navi_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:src="@mipmap/navi_back" />

        <TextView
            android:id="@+id/navi_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font15_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navi_title_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/navi_title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_3" />

        <TextView
            android:id="@+id/navi_title_txt"
            style="@style/navi_tab_header_title_text"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navi_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:minWidth="50dp"
        android:onClick="onNaviRightClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/navi_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/navi_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font15_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navi_right_second_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:minWidth="50dp"
        android:onClick="onNaviRightSecondClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/navi_right_second_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/navi_right_second_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6.0dip"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font15_txt_size" />
    </LinearLayout>


</LinearLayout>