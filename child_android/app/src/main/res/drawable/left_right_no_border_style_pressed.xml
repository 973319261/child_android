<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/lightwhite" />

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="0px"
        android:right="0px"
        android:top="1px">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/lightwhite"
                android:startColor="@color/lightwhite"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="0dip"
                android:bottomRightRadius="0dip"
                android:topLeftRadius="0dip"
                android:topRightRadius="0dip" />
        </shape>
    </item>

</layer-list>