<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_list_cell_default_white_press_light_gray_selector"
    android:gravity="center_vertical"
    android:padding="@dimen/common_10">

    <ImageView
        android:id="@+id/user_avatar_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerInside"
        android:src="@color/gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_10"
        android:layout_marginRight="@dimen/common_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/default_text_view_style"
            android:text="1324-850600"
            android:textColor="@color/black"
            android:textSize="@dimen/font16_txt_size" />

        <TextView
            android:id="@+id/user_apply_time_tv"
            style="@style/default_text_view_style"
            android:layout_marginTop="@dimen/common_5"
            android:text="2018-01-22 12:12"
            android:textSize="@dimen/font12_txt_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_agree_btn"
        style="@style/default_text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_purple_red_btn_style"
        android:gravity="center"
        android:paddingBottom="@dimen/common_5"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10"
        android:paddingTop="@dimen/common_5"
        android:text="@string/text_new_friends_consent"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/user_reject_btn"
        style="@style/default_text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_5"
        android:background="@drawable/round_corner_gray_btn_style"
        android:gravity="center"
        android:paddingBottom="@dimen/common_5"
        android:paddingLeft="@dimen/common_10"
        android:paddingRight="@dimen/common_10"
        android:paddingTop="@dimen/common_5"
        android:text="@string/text_new_friends_reject"
        android:textColor="@color/dark_gray" />
</LinearLayout>