<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/common_10">

    <TextView
        android:id="@+id/chat_send_time_tv"
        style="@style/default_text_view_style"
        android:layout_marginBottom="@dimen/common_5"
        android:text="12:12"
        android:textColor="@color/lightGray"
        android:textSize="@dimen/font12_txt_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|top">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:layout_marginRight="@dimen/common_10"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chat_user_name_tv"
                style="@style/default_text_view_style"
                android:text="1324-850600"
                android:visibility="gone"
                android:textColor="@color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_seed_state"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/tv_message_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未读"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/chat_content_tv"
                    style="@style/default_text_view_style"
                    android:background="@mipmap/chat_send"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:text="共享单车大战"
                    android:textSize="@dimen/font16_txt_size" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/chat_user_avatar_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_friends_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#41CCCCCC"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12dp"
              android:text="@string/text_enable_friend_verification"/>
          <TextView
              android:id="@+id/tv_friends_validation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12dp"
              android:textColor="@color/colorPrimary"
              android:text="@string/text_enable_friend_verification_bule"/>
      </LinearLayout>
    </LinearLayout>
</LinearLayout>