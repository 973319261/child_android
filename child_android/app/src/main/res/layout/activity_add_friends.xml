<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_activiy_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/navi_top_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:padding="@dimen/common_10">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/round_corner_shade_no_border_default_style"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/login_mobile_area_code_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/common_10"
               android:text="+86"
               android:textColor="@color/colorGrayDark"
               android:textSize="16dp" />
           <EditText
               android:id="@+id/user_search_et"
               style="@style/default_edit_text_style"
               android:layout_weight="1"
               android:hint="@string/text_friends_add_enter_phone"
               android:padding="@dimen/common_10" />
       </LinearLayout>

        <TextView
            android:id="@+id/user_search_btn"
            style="@style/default_text_view_style"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_10"
            android:background="@drawable/btn_border_fill"
            android:gravity="center"
            android:text="@string/text_friends_add_search"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        style="@style/default_listview"
        android:background="@color/white" />
</LinearLayout>

