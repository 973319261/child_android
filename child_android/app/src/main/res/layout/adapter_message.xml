<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_list_cell_default_white_press_light_gray_selector"
    android:gravity="center_vertical"
    android:padding="@dimen/common_8"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/msg_user_avatar_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerInside"
        android:src="@mipmap/default_user_avatar" />

    <com.android.widgets.CircleImageView
        android:id="@+id/msg_unread_img"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        android:layout_gravity="top"
        android:src="@color/purple_red_color"
        app:border_color="@color/purple_red_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/msg_user_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_8"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/msg_user_name_tv"
                style="@style/default_text_view_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1324-850600"
                android:textColor="@color/black"
                android:textSize="@dimen/font16_txt_size" />
            <TextView
                android:id="@+id/msg_time_tv"
                style="@style/default_text_view_style"
                android:text="12:12"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/font12_txt_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_user_time_layout"
            android:layout_marginLeft="@dimen/common_8"
            android:layout_marginTop="@dimen/common_3"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_seed_state"
                android:visibility="gone"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/msg_content_tv"
                style="@style/default_text_view_style"
                android:layout_below="@+id/msg_user_time_layout"
                android:maxLines="1"
                android:text="asasa"
                android:textSize="@dimen/font14_txt_size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>